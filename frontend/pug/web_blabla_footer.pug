    p= 'git branch: ' + fingerprint.git_branch_name
    p= 'git commit hash: ' + fingerprint.git_commit_hash
    p= 'git commit author: ' + fingerprint.git_commit_author
    p= 'git commit date: ' + fingerprint.git_commit_date
