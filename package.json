{
  "name": "web_blabla",
  "version": "1.0.0",
  "description": "my boilerplate for web projects",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "install_py": "PIPENV_VENV_IN_PROJECT=1 pipenv install",
    "clean_docs": "rm -fr docs/build docs/*.pdf",
    "build_docs": "pipenv run sphinx-build -b html docs/ docs/build/",
    "view_docs": "sensible-browser docs/build/index.html",
    "docs": "run-s clean_docs build_docs view_docs",
    "clean_fe": "rm -fr frontend/dist",
    "build_html": "WITH_SERVICE_WORKER=true pug -O frontend/pug_includes/fingerprint.js --pretty --out frontend/dist/ frontend/routes",
    "build_html_dev": "pug -O frontend/pug_includes/fingerprint.js --pretty --out frontend/dist/ frontend/routes",
    "dev_html": "pug -O frontend/pug_includes/fingerprint.js --pretty --watch --out frontend/dist/ frontend/routes",
    "build_css": "sass frontend/sass/web_blabla_style.scss frontend/dist/css/web_blabla_style.css",
    "dev_css": "sass --watch frontend/sass/web_blabla_style.scss frontend/dist/css/web_blabla_style.css",
    "build_fejs": "tsc --project frontend/ts",
    "dev_fejs": "tsc --watch --project frontend/ts",
    "eslint_fe": "eslint frontend/ts/**",
    "test_fe": "jest --config=frontend/jest.config.js frontend",
    "build_favicon": "cpy frontend/favi/**/* frontend/dist/",
    "build_img": "cpy frontend/img/**/* frontend/dist/img",
    "build_fe": "    run-s build_html     build_css build_fejs build_favicon build_img",
    "build_fe_dev": "run-s build_html_dev build_css build_fejs build_favicon build_img",
    "dev_fe": "run-p -l dev_html dev_css dev_fejs build_favicon build_img serve_fe",
    "serve_fe": "live-server frontend/dist",
    "start_fe": "run-s clean_fe build_fe serve_fe",
    "clean_be": "rm -fr backend/dist",
    "build_bejs": "tsc -p backend",
    "dev_bejs": "tsc --watch --project backend",
    "cpy_be": "cpy backend/keys/*.crt backend/keys/*.key backend/dist/",
    "build_be": "run-s build_bejs cpy_be",
    "eslint_be": "eslint backend/src/**",
    "test_be": "jest --config=backend/jest.config.js backend",
    "swag_be": "swagger-jsdoc -d backend/swaggerDef.js backend/src/web_blabla_app.ts -o backend/swagger.yaml",
    "serve_be": "node backend/dist/web_blabla_app.js",
    "serve_be_prod_http": " NODE_ENV='production' HTTP_ENBALE=1 node backend/dist/web_blabla_app.js",
    "start_be": "run-s clean_be build_be serve_be",
    "build_all": "run-s clean_fe build_fe clean_be build_be",
    "start_browser": "sensible-browser https://localhost:8443",
    "start_be_fe": "run-p serve_be start_browser",
    "start": "run-s build_all start_be_fe",
    "test": "run-s test_fe eslint_fe test_be eslint_be"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlyoleg/web_blabla.git"
  },
  "author": "charlyoleg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlyoleg/web_blabla/issues"
  },
  "homepage": "https://github.com/charlyoleg/web_blabla#readme",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "cpy-cli": "^3.1.0",
    "eslint": "^6.8.0",
    "git-repo-info": "^2.1.1",
    "jest": "^25.4.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.26.3",
    "swagger-jsdoc": "^4.0.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^2.0.2"
  }
}
